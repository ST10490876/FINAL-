<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDDC39"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="407dp"
        android:layout_height="187dp"
        android:layout_marginStart="669dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="651dp"
        android:layout_marginBottom="2323dp"
        android:text="ADD TO LIST"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button4"
        android:layout_width="368dp"
        android:layout_height="177dp"
        android:layout_marginStart="491dp"
        android:layout_marginTop="2080dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="519dp"
        android:text="NEXT"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="1091dp"
        android:layout_height="274dp"
        android:layout_marginStart="305dp"
        android:layout_marginTop="131dp"
        android:layout_marginEnd="331dp"
        android:layout_marginBottom="226dp"
        android:text="MY MUSIC"
        android:textAlignment="center"
        android:textSize="96sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button7"
        android:layout_width="350dp"
        android:layout_height="178dp"
        android:layout_marginTop="2080dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="518dp"
        android:text="EXIT"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
</androidx.constraintlayout.widget.ConstraintLayout>