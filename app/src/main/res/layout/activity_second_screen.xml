<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8BC34A"
    tools:context=".SecondScreen">

    <Button
        android:id="@+id/buttonRating"
        android:layout_width="293dp"
        android:layout_height="265dp"
        android:text="Ratings"
        android:textSize="48sp"
        tools:layout_editor_absoluteX="964dp"
        tools:layout_editor_absoluteY="337dp" />

    <Button
        android:id="@+id/buttonReturn"
        android:layout_width="337dp"
        android:layout_height="197dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="497dp"
        android:layout_marginEnd="286dp"
        android:layout_marginBottom="37dp"
        android:text="RETURN"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRating"
        app:layout_constraintVertical_bias="0.606" />

    <Button
        android:id="@+id/buttonSongs"
        android:layout_width="322dp"
        android:layout_height="260dp"
        android:text="Playlist"
        android:textSize="48sp"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="356dp" />

    <TextView
        android:id="@+id/textPlaylist"
        android:layout_width="709dp"
        android:layout_height="974dp"
        android:text="TextView"
        android:textSize="48sp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="665dp" />

    <TextView
        android:id="@+id/textRating"
        android:layout_width="544dp"
        android:layout_height="954dp"
        android:text="TextView"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="802dp"
        tools:layout_editor_absoluteY="680dp" />
</androidx.constraintlayout.widget.ConstraintLayout>